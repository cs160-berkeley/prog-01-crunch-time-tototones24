<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#465276"
    tools:context="com.example.tototones24.crunchtime2.MainActivity">


    <Spinner
        android:id="@+id/sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:layout_alignParentStart="true"
        android:backgroundTint="#7580a3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convert"
        android:id="@+id/button"
        android:background="#2e3448"
        android:textColor="#ffffff"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_below="@+id/sp"
        android:layout_alignStart="@+id/button"
        android:layout_alignEnd="@+id/button" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sp"
        android:layout_toEndOf="@+id/editText"
        android:id="@+id/radioGroup">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minutes"
            android:id="@+id/radioButton"
            android:checked="false"
            android:textColor="#ffffff" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repetitions"
            android:id="@+id/radioButton2"
            android:checked="false"
            android:textColor="#ffffff" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Pushups"
        android:id="@+id/textView"
        android:textColor="#f4f1f1"
        android:textAlignment="textStart"
        android:layout_alignTop="@+id/pushupImage"
        android:layout_alignEnd="@+id/pushupImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Situps"
        android:id="@+id/textView2"
        android:textColor="#fbfafa"
        android:textAlignment="textStart"
        android:layout_alignTop="@+id/textView"
        android:layout_alignEnd="@+id/situpView"
        android:layout_marginEnd="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Jogging"
        android:id="@+id/textView3"
        android:textColor="#ffffff"
        android:textAlignment="textStart"
        android:layout_above="@+id/joggingImage"
        android:layout_alignParentStart="true"
        android:layout_marginStart="29dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="JumpingJacks"
        android:id="@+id/textView4"
        android:textColor="#ffffff"
        android:textAlignment="textStart"
        android:layout_alignTop="@+id/jumpingImage"
        android:layout_alignStart="@+id/radioGroup" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/joggingImage"
        android:src="@drawable/jogging"
        android:layout_below="@+id/textView4"
        android:layout_toStartOf="@+id/button"
        android:layout_alignEnd="@+id/textView3" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/jumpingImage"
        android:src="@drawable/jumpingjack"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pushupImage"
        android:src="@drawable/pushup"
        android:layout_below="@+id/button"
        android:layout_alignEnd="@+id/textView3"
        android:layout_above="@+id/textView3" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/situpView"
        android:src="@drawable/pushup2"
        android:layout_below="@id/textView2"
        android:layout_alignEnd="@+id/textView4"
        android:layout_toEndOf="@+id/button"
        android:layout_above="@+id/textView4" />

</RelativeLayout>
